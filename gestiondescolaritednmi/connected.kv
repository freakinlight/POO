<Connected>:
    BoxLayout:
        orientation: 'vertical'

        Label:
            text: "You are now connected"
            font_size: 20
            color: 1, 0.5, 0.8, 1
        Button:
            text: "Disconnect"
            font_size: 15
            size_hint: 0.5, 0.2
            on_press: root.disconnect()